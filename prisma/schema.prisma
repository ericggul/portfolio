// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project{
  id String @default(cuid()) @id
  title String @unique

  rating Float @default(4.45)
  ratingCount Int @default(28)

  shortDescription String?
  longDescription String?
  quoteDescription String?
  projectURL String?

  imageURLs String[]
  medium String @default("HTML")
  date String


  land Land? @relation(fields: [landId], references: [id])
  landId String? 

  relatedProjects String[]


  lat Float? @default(51.4899) 
  lng Float? @default(-0.2070) 

    expectedTime Int?

}






model Land{
  id String @default(cuid()) @id
  title String
  medium String
  contributionType String

  baseLandURL String?
  baseImageURL String?

  projects Project[]
}

