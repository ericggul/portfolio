generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project{
  id String @default(cuid()) @id
  title String @unique

  shortDescription String?
  longDescription String?
  projectURL String?

  imageURLs String[]
  medium String @default("HTML")
  date String
  lat Float? @default(37.54648)
  lng Float? @default(127.00609)

  rating Float @default(4.45)
  ratingCount Int @default(28)

  land Land? @relation(fields: [landId], references: [id])
  landId String? 

  price Price[]

}

