model Price{
  id String @default(cuid()) @id
  priceType String
  price Float
  project Project? @relation(fields: [projectId], references: [id])
  projectId String?
}


model Land{
  id String @default(cuid()) @id
  title String
  medium String
  contributionType String

  baseLandURL String?
  baseImageURL String?

  projects Project[]
}

